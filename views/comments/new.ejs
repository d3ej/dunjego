<% include ../partials/header %>
<div class="container">
	<div class="jumbotron">
		<h1>Add Comment to <%= dungeon.name %></h1>
		<a href="/dungeons">Go back!</a>
		<br>
		<br>
		<form method="POST" action="/dungeons/<%= dungeon._id %>/comments">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="Author">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Text">
			</div>
			<div class="form-group">
				<button class="btn btn-medium btn-primary submit">Submit!</button>
			</div>
		</form>
	</div>
</div>
<% include ../partials/footer %>